#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <string.h>

struct data{
    char* name[30];
    int nim;
    int ipk;
    };

void main(){
    
    int i, j, save2, save3, jml = 3;
    char* save1[30];
    struct data arr_tampung[jml];

    for(i = 0; i < jml; i++){
        printf("Masukkan data mahasiswa ke %d\n", i+1);
        printf("Masukkan nama\t: ");
            fflush(stdin);
            gets(&arr_tampung[i].name);
        printf("Masukkan nim\t: ");
        scanf("%d", &arr_tampung[i].nim);
