        printf("\n\n");
    }

    //sorting ipk
    for (i = 0; i < jml-1; i++){
        for (j = i; j < jml; j++){
            if (arr_tampung[i].ipk > arr_tampung[j].ipk){
                strcpy(arr_tampung[i].name, save1); //save1 = arr_tampung[i].name;
                save2 = arr_tampung[i].nim;
                save3 = arr_tampung[i].ipk;
                
                strcpy(arr_tampung[i].name, arr_tampung[j].name;); //arr_tampung[i].name = arr_tampung[j].name;
                arr_tampung[i].nim = arr_tampung[j].nim;
                arr_tampung[i].ipk = arr_tampung[j].ipk;
                
                strcpy(save1, arr_tampung[j].name); //arr_tampung[j].name = save1;
                arr_tampung[j].nim = save2;
                arr_tampung[j].ipk = save3;
            }
        }
    }

/*  for (i = 0; i < jml-1; i++){
        for (j = i; j < jml; j++){
