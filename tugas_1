*/    
    printf("Data setelah sorting adalah :\n");
    for(i = 0; i < jml; i++){
        printf("Nama\t: %s\nNIM\t: %d\nNilai\t: %d", arr_tampung[i].name, arr_tampung[i].nim, arr_tampung[i].ipk);
